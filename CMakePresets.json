{
  "version": 3,
  "cmakeMinimumRequired": { "major": 3, "minor": 23, "patch": 0 },
  "configurePresets": [
    {
      "name": "msvc-debug",
      "displayName": "MSVC Debug",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build/msvc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "clangcl-fuzz",
      "displayName": "ClangCL Debug + Fuzz",
      "generator": "Visual Studio 17 2022",
      "toolset": "ClangCL",
      "architecture": "x64",
      "binaryDir": "${sourceDir}/build/clangcl-fuzz",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ENABLE_FUZZ": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "msvc-debug",
      "configurePreset": "msvc-debug"
    },
    {
      "name": "clangcl-fuzz",
      "configurePreset": "clangcl-fuzz",
      "targets": ["fuzz_entities"],
      "configuration": "Debug"
    }
  ],
  "testPresets": [
    {
      "name": "msvc-debug",
      "configurePreset": "msvc-debug",
      "configuration": "Debug",
      "output": { "outputOnFailure": true }
    },
    {
      "name": "clangcl-fuzz",
      "configurePreset": "clangcl-fuzz",
      "configuration": "Debug",
      "output": { "outputOnFailure": true }
    }
  ]
}
